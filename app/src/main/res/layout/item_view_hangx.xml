<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:padding="20px"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/butum"
    android:weightSum="10"
    android:padding="10px"
    >
    <ImageView
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_weight="1"
        android:src="@drawable/quan_ao"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="8"
        android:layout_marginTop="10px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã Hãng: "
            android:id="@+id/txtMaHangX"
            android:textStyle="bold"
            android:textSize="21sp"
            android:textColor="#FB0101"
            android:layout_marginLeft="50sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên hãng: "
            android:id="@+id/txtTenHangX"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginTop="10px"
            android:textColor="@color/black"
            />

    </LinearLayout>
    <ImageView
        android:layout_marginTop="12sp"
        android:layout_width="100px"
        android:layout_height="130px"
        android:src="@drawable/delete"
        android:id="@+id/deleteHangx"
        android:layout_weight="1"
        />
</LinearLayout>
</LinearLayout>